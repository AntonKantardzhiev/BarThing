{% extends 'base.html.twig' %}

{% block title %}Cocktail{% endblock %}

{% block body %}
    <h1>Cocktail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cocktail.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cocktail.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ cocktail.image }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ cocktail.category }}</td>
            </tr>
            <tr>
                <th>Glass</th>
                <td>{{ cocktail.glass }}</td>
            </tr>
            <tr>
                <th>IngredientsAndMeasurements</th>
                <td>{{ cocktail.ingredientsAndMeasurements ? cocktail.ingredientsAndMeasurements|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ cocktail.instructions }}</td>
            </tr>
            <tr>
                <th>IsAlcoholic</th>
                <td>{{ cocktail.isAlcoholic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cocktail_index') }}">back to list</a>

    <a href="{{ path('cocktail_edit', {'id': cocktail.id}) }}">edit</a>

    {{ include('cocktail/_delete_form.html.twig') }}
{% endblock %}
