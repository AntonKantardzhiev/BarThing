{% extends 'base.html.twig' %}

{% block title %}Cocktail{% endblock %}

{% block body %}
    <h1>{{ cocktail.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
{#                <th>Id</th>#}
{#                <td>{{ cocktail.id }}</td>#}
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cocktail.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ cocktail.image }}" width="140" height="140"></td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ cocktail.category }}</td>
            </tr>
            <tr>
                <th>Glass</th>
                <td>{{ cocktail.glass }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>
                <ul>
                    {% for items in cocktail.ingredientsAndMeasurements %}
                        <li>{{ items|join(', ') }}</li>
                    {% endfor %}
                </ul>
                </td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ cocktail.instructions }}</td>
            </tr>
            <tr>
                <th>IsAlcoholic</th>
                <td>{{ cocktail.isAlcoholic ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cocktail_index', {'firstCharacter': 'a'}) }}">back to list</a>

    <a href="{{ path('cocktail_edit', {'id': cocktail.id}) }}">edit</a>

    {{ include('cocktail/_delete_form.html.twig') }}
{% endblock %}
