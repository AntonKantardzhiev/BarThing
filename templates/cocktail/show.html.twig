{% extends 'base.html.twig' %}

{% block title %}Cocktail{% endblock %}

{% block body %}
    <div class="col-8 mx-auto text-center m-5">
        <table class="table">
            <tbody >
            <tr>
                <h1 class="float-left ">{{ cocktail.name }}</h1>
                 <a href="{{ path('cocktail_index', {'firstCharacter': 'a'}) }}" class="btn btn-warning float-right">back to list</a>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cocktail.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ cocktail.image }}" width="140" height="140"></td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ cocktail.category }}</td>
            </tr>
            <tr>
                <th>Glass</th>
                <td>{{ cocktail.glass }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>
                    <ul>
                        {% for items in products %}
                            <li><a href="{{ path('product_detailed', {'id': items.id}) }}">{{ items.name ~ ', ' ~ items.measurement }}</a></li>
                        {% endfor %}
                    </ul>

                </td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ cocktail.instructions }}</td>
            </tr>
            <tr>
                <th>Is it Alcoholic ?</th>
                <td>{{ cocktail.isAlcoholic ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>



{#{% if( app.user.role === ) %}#}
    <a href="{{ path('cocktail_edit', {'id': cocktail.id}) }}" class="btn btn-warning float-right">edit</a>
        {{ include('cocktail/_delete_form.html.twig') }}
    </div>
{% endblock %}
