{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="product-container">

        <div class="small-container single-product">
            <div class="row">
                <div class="col-4">
                    <img class="detail-img" src="{{ product.fetchIngredientImageURLMedium(product.name)}}" alt="cocktail">
                </div>
                <div class="col-4">
                    <h1 class="text-center mx-auto">{{ product.name }}</h1>
                    <h4 class="text-center mx-auto">â‚¬ {{ product.price }}</h4>
                    <form method="post" action="{{ path('shopping_line_new') }}">
                        <input type="number" value='{{ product.id }}' name="product" hidden>
                        <input type="number" name="quantity" value="1">
                        <input type="text" name="isEdit" value="" hidden>
                        <button class="btn add-to-cart" type="submit">add to cart</button>
                    </form>
                    <h3>Product Details</h3>
                    <p class="detailed-description">{{ cocktailApi.fetchIngredientByName(product.name).getDescription }}</p>
                </div>
            </div>
        </div>

    </div>
