{% extends 'base.html.twig' %}

{% block title %}Our products{% endblock %}

{% block body %}
    <div class="product-container">

        <div class="small-container">
            <h2 class="products">Our Products</h2>


            <div class="row">
                {% for product in products %}
                <div class="col-4">
                    <a href="{{ path('product_detailed',{'id': product.id} ) }}">
                    <img src="{{ product.fetchIngredientImageURLMedium(product.name)}}" alt="cocktail">
                    </a>
                    <h4 class="text-center mx-auto">{{ product.name }}</h4>
                    <p class="text-center mx-auto">{{ product.price }}</p>
                </div>
                {% endfor %}
            </div>


        </div>

    </div>

{% endblock %}
