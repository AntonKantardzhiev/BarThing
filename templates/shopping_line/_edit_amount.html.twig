<form method="post" action="{{ path('edit_amount_from_cart') }}" class="form-check-inline" id="{{ shoppingLine.Product.name}}">
    <input type="text" value='{{ shoppingLine.Product.id }}' name="product" hidden>
    <input type="number" name="quantity" value="{{ shoppingLine.quantity }}">
    <button type="submit" class="mr-md-2 mb-md-0 mb-2 btn-outline-primary btn-round">change amount</button>
</form>
