{% extends 'base.html.twig' %}

{% block title %}HomeBrew{% endblock %}

{% block body %}
<div class="col-8 mx-auto text-center m-5 pb-5">


    <h1>HomeBrew</h1>
    <table class="table">
    <tbody>
        <tr>
            <a href="{{ path('home_brew_index') }}" class="btn btn-warning float-right m-2" >back to list</a>

        </tr>
            <tr>
                <th>Id</th>
                <td>{{ home_brew.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ home_brew.name }}</td>
            </tr>
            <tr>
                <th>Glass</th>
                <td>{{ home_brew.glass }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ home_brew.instructions }}</td>
            </tr>
            <tr>
                <th>IngredientsAndMeasurements</th>
                <td>
                    <ul>
                        {% for items in products %}
                            <li><a href="{{ path('product_detailed', {'id': items.id}) }}">{{ items.name ~ ', ' ~ items.measurement }}</a></li>
                        {% endfor %}
                    </ul>
                </td>

            </tr>
        </tbody>
    </table>


<div class="float-right">
    <a href="{{ path('home_brew_edit', {'id': home_brew.id}) }}" class="btn btn-warning">edit</a>
    <div class="btn btn-light">{{ include('home_brew/_delete_form.html.twig') }}</div>
</div>
</div>
{% endblock %}
